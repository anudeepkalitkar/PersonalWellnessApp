<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"

            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:contentDescription="@string/app_icon_desc"
                app:srcCompat="@drawable/app_icon" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20sp"
                android:text="@string/log_new_mood"
                android:textAlignment="center"
                android:textColor="#1A237E"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/felt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/i_felt"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="20sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                tools:ignore="UselessParent">

                <RadioGroup
                    android:id="@+id/selectMood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false">

                        <RadioButton
                            android:id="@+id/happy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/happy"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/sad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/sad"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/sleepy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/sleepy"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/cool"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/cool"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/depressed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/depressed"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/scared"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/scared"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/neutral"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/neutral"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/sick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/sick"
                            tools:ignore="VisualLintButtonSize" />

                        <RadioButton
                            android:id="@+id/angry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="@string/angry"
                            tools:ignore="VisualLintButtonSize" />

                    </GridLayout>
                </RadioGroup>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/because"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/because"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="20sp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:orientation="horizontal">

                <EditText

                    android:id="@+id/descBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/i_had_pizza"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:minHeight="48dp"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/add_mood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="true"
                    android:text="@string/add_mood"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="20sp"
                    tools:ignore="VisualLintButtonSize" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/back_add_mood_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="true"
                    android:text="@string/back"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="20sp"
                    tools:ignore="VisualLintButtonSize" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
